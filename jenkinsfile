pipeline{
    agent any

    options{
        ansiColor('xterm')
    }

    parameters{
        choice(name: "BROWSER", choices: ['chrome','edge'], description: "Ejecucion en varios navegadores")
    }

    tools {nodejs "Node18"}
  
    environment {
        CHORME_BIN = 'bin/google-chrome'
    }

    stages{
        stage('Dependencies'){
            steps{
                bat "npm i"
            }
        }
        stage('e2e Test'){
            steps{
                bat "npx cypress run --browser ${params.BROWSER}"
            }
        }
        stage('Deploy'){
            steps{
                echo "Deploying the application"
            }
        }
    }
}