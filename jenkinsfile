pipeline{
    agent any

    tools {nodejs "Node18"}

    options{
        ansiColor('xterm')
    }

    environment {
        CHORME_BIN = 'bin/google-chrome'
    }

    stages{
        stage('Dependencies'){
            steps{
                sh "npm install"
            }
        }
        stage('e2e Test'){
            steps{
                bat "npx cypress run"
            }
        }
        stage('Deploy'){
            steps{
                echo "Deploying the application"
            }
        }
    }
}
